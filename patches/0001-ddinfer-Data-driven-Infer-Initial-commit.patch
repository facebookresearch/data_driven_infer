+      | Some lastBranch -> lastBranch
+      | None -> raise Exit
+    in
+    let lastHistory =
+      match t.lastHistory with
+      | Some lastHistory -> lastHistory
+      | None -> raise Exit
+    in
+    SSet.add (lastHistory, lastBranch) SSet.empty
+  with _ -> SSet.empty
+
+let current_trace t = t.history
