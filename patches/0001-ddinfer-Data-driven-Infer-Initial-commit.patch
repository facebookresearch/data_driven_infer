+      else
+        match list with
+        | [] -> ()
+        | hd::tl ->
+           L.d_printfln "* Selected(%f <- %f) %d: %a" (tsnd hd) (ttrd hd) k feature_pp (tfst hd);
+           selected_log tl (k - 1)
+
+    let rec partition fn l1 l2 =
+      match (l1, l2) with
+      | ([], _) | (_, []) -> ([], [], [], [])
+      | (hd::tl, hd2::tl2) ->
+         let a1, a2, b1, b2 = partition fn tl tl2 in
+         if fn hd2 then (hd::a1, a2, hd2::b1, b2)
+         else (a1, hd::a2, b1, hd2::b2)
+
+    let rec qsort l1 l2 =
