+         let s1, l1, s2, l2 = partition (fun (y: float) -> Float.compare x y < 0) tl tl2 in
+         let a1 = qsort s1 s2 in
+         let b1 = qsort l1 l2 in
+         a1 @ (hd::b1)
+
+    let rec select list k =
+      if k <= 0 then []
+      else
+        match list with
+        | [] -> []
+        | hd::tl -> hd::(select tl (k - 1))
+
+    let rec select_mark list k node =
+      if k <= 0 then []
+      else
+        match list with
